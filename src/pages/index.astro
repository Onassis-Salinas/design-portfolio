---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Onassis">
    <main class="flex flex-col mx-auto px-4 max-w-6xl justify-center items-center">
        <section class="min-h-lvh flex justify-center items-center">
            <h1 class="text-[180px] relative font-medium">
                PORTAFOLIO
                <p class="text-2xl absolute bottom-8 left-4 font-medium">Onassis Salinas</p>
                <p class="text-2xl absolute top-8 right-4 font-medium">2024</p>
            </h1>
        </section>
        <!-- <div class="blur"><div class="gradient"></div></div> -->

        <section class="max-w-6xl w-full">
            <h2 class="text-6xl font-medium w-full uppercase">Mi trabajo</h2>
            <div>
                
            </div>
        </section>

    </main>

    <footer class="w-full py-5 flex">
        <div class="max-w-6xl mx-auto w-full flex justify-center font-normal text-xl">Contactame ; )</div>
    </footer>

    <script>
        import gsap from "gsap";

        document.addEventListener("DOMContentLoaded", (event) => {
            gsap.registerPlugin(Flip, ScrollTrigger, Observer, ScrollToPlugin, Draggable, MotionPathPlugin, EaselPlugin, PixiPlugin, TextPlugin);

            gsap.from("h1", { duration: 1.5, y: 30, opacity: 0, scale: 0.95, delay: 0.6 });
        });
    </script>
</Layout>

<style>
    .gradient {
        animation: rotate 20s forwards;
        background: rgb(220, 173, 79);
        background: linear-gradient(0deg, rgba(220, 173, 79, 0.2) 0%, rgba(77, 162, 246, 0.2) 100%);
        border-radius: full;
        width: 100%;
        height: 100%;
        animation: rotate 20s infinite linear;
    }
    .blur {
        /* top: 0;
        left: 0;
        transform: translate(-50%, -50%); */
        width: 30lvw;
        aspect-ratio: 10/11;
        filter: blur(200px);
        z-index: 0;
        position: absolute;
    }

    @keyframes rotate {
        from {
            rotate: 0deg;
        }
        to {
            rotate: 360deg;
        }
    }
</style>
